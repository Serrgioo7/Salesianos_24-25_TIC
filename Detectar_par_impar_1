#Este programa suma por un lado los números pares y por otro lado los imapres
def suma_par_impar():
  suma_par=0 #Defino dos variables acumuladoras
  suma:impar=0
  numero=input("¿Hasta que numero deseas realizar la suma")
  for cont in range(1,int(numero)+1):
    if(cont%2==0):
      print(str(cont)+ "es par")
    if (cont%2==1):
      print(str(cont)+ "es impar")

suma_par_impar()
